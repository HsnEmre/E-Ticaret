@model E_Ticaret.Models.Account.RegisterModels
@{
    ViewBag.Title = "Register";
}

<div class="row">
    <div class="col-sm-6 col-sm-offset-3 col-md-4 col-md-offset-4">
        @using (Html.BeginForm())
        {
            <div class="panel panel-default">
                <div class="panel-heading text-center">
                    <h2>Register</h2>
                    @{
                        if (ViewBag.ReError != null && string.IsNullOrEmpty((string)ViewBag.ReError)==false)
                        {
                            <small style="color:red">@ViewBag.ReError</small>
                        }
                        else
                        {
                            <small>Please enter e-mail and password.</small>
                        }
                    }
                </div>
                <div class="panel-body">

                    <div class="form-group">
                        <center>
                            <img src="http://placehold.it/125x125" class="img-circle img-responsive" />
                        </center>
                    </div>
                    <div class="form-group">
                        @Html.TextBoxFor(Model => Model.Member.Name, new { @class = "form-control", placeholder = "Name", type = "text" })

                    </div>

                    <div class="form-group">
                        @Html.TextBoxFor(Model => Model.Member.Surname, new { @class = "form-control", placeholder = "surname", type = "text" })

                    </div>

                    <div class="form-group">
                        @Html.TextBoxFor(Model => Model.Member.Email, new { @class = "form-control", placeholder = "e-mail address", type = "email" })

                    </div>

                    <div class="form-group">
                        @Html.TextBoxFor(Model => Model.Member.Password, new { @class = "form-control", placeholder = "password", type = "password" })

                    </div>

                    <div class="form-group">
                        @Html.TextBoxFor(Model => Model.rePassword, new { @class = "form-control", placeholder = "re-password", type = "password" })

                    </div>

                </div>
                <div class="panel-footer text-right">
                    <a href="@Url.Action("Login","Account")" class="btn btn-info">
                        <span class="glyphicon glyphicon-log-in"></span> Login
                    </a>
                    <button type="submit" class="btn btn-success">
                        <span class="glyphicon glyphicon-floppy-saved"></span> Register
                    </button>

                </div>
            </div>
        }




    </div>
</div>

