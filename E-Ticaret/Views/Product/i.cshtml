@model IEnumerable<E_Ticaret.DB.Products>

@{
    ViewBag.Title = "";
}

<h2>Ürünler</h2>

<p>
    @Html.ActionLink("Yeni Ürün Ekle ", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayName("Ürün Adı")
        </th>
        <th>
            @Html.DisplayName("Ürün Fiyatı")
        </th>

        <th>
            @Html.DisplayName("Ürün Resmi")
        </th>
        <th>
            @Html.DisplayName("Ürün Kategorisi")
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProductImageName)
            </td>
            @Html.DisplayFor(modelItem => item.Categories.Name)
            <td>
                @Html.ActionLink("Düzenle", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Sil", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>
